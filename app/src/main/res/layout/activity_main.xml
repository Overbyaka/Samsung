<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.example.homework.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:textSize="14dp"
        android:text="@string/firstName"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:textSize="14dp"
            android:text="@string/secondName"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:textSize="14dp"
            android:text="@string/patronymic"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:textSize="14dp"
            android:text="@string/year"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:textSize="14dp"
            android:text="@string/school"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:textSize="14dp"
            android:text="@string/town"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:textSize="14dp"
            android:text="@string/expOfProgramming"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:textSize="14dp"
            android:text="@string/knowledgeOfLangProgramming"
            /></LinearLayout>
    <LinearLayout
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="2">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:id="@+id/firstName"
            android:textSize="14dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:id="@+id/secondName"
            android:textSize="14dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:id="@+id/patronymic"
            android:textSize="14dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:id="@+id/year"
            android:textSize="14dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:id="@+id/town"
            android:textSize="14dp"/>
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:id="@+id/school"/>
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:id="@+id/expOfProgramming"/>
        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:id="@+id/knowledgeOfLangProgramming"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="3">
        <CalendarView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></CalendarView>
    </LinearLayout>
</LinearLayout>
